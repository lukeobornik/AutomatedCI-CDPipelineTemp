extends layout

block content
  h1= title
  ul
  each item in ['AddProduct', 'MyProducts']
    button(type="button")
        a(href="/products/" + item)=item

  form(action='/products/addProduct', method='post')
    label(for='name') Product Name:
    br
    input(type='text', name='name', required)
    br
    label(for='description') Description:
    br
    textarea(name='description', rows='4', required)
    br
    label(for='quantity') Quantity:
    br
    input(type='number', name='quantity', step='1' required)
    br
    label(for='price') Price in GBP:
    br
    input(type='number', name='price', step='0.01', required)
    br
    button(type='submit') Add Product